{% extends "shuup/admin/base.jinja" %}
{% from "shuup/admin/macros/general.jinja" import content_with_sidebar, content_block %}
{% from "shuup/admin/macros/multilanguage.jinja" import render_monolingual_fields %}
{% block title %}{% trans %}Product filter settings{% endtrans %}{% endblock %}

{% block content %}
    {% call content_with_sidebar(content_id="product_filter_form") %}
        <form method="post" id="product_filter_form">
            {% csrf_token %}
            {% for form_def in form.form_defs.values() %}
                {% include form_def.template_name with context %}
            {% endfor %}
        </form>
    {% endcall %}
{% endblock %}