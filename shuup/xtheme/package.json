{
  "name": "shuup-xtheme",
  "version": "1.0.0",
  "description": "Shuup XTheme Editor",
  "main": "build_resources.js",
  "scripts": {
    "watch": "parcel watch .",
    "build": "parcel build . --no-source-maps",
    "lint": "eslint static_src"
  },
  "shuup": {
    "static_build": true
  },
  "author": "Shuup Team <shuup@shuup.com>",
  "private": true,
  "license": "OSL-3.0",
  "dependencies": {
    "bootstrap": "^3.4.1",
    "font-awesome": "^4.7.0",
    "jquery": "^3.5.1",
    "lodash": "^4.17.20",
    "open-sans-all": "0.1.3",
    "select2": "^4.0.13",
    "sortablejs": "^1.14.0",
    "summernote": "0.8.18"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.14.7",
    "@parcel/transformer-less": "^2.0.0-nightly.758",
    "eslint": "^5.1.0",
    "parcel": "^2.0.0-beta.3.1"
  },
  "browserslist": ["> 0.2%", "not dead"],
  "xtheme_admin_script": "static/xtheme/admin/script.js",
  "xtheme_admin_snippet": "static/xtheme/admin/snippet.js",
  "xtheme_admin_style": "static/xtheme/admin/xtheme_admin.css",
  "xtheme_editor": "static/xtheme/editor.js",
  "xtheme_editor_vendor": "static/xtheme/vendor.js",
  "xtheme_editor_injection": "static/xtheme/editor-injection.js",
  "targets": {
    "xtheme_admin_script": {
      "source": "static_src/admin/script.js",
      "context": "browser"
    },
    "xtheme_admin_style": {
      "source": "static_src/admin/xtheme_admin.less",
      "context": "browser"
    },
    "xtheme_admin_snippet": {
      "source": "static_src/admin/snippet.js",
      "context": "browser"
    },
    "xtheme_editor": {
      "source": "static_src/editor/editor.js",
      "context": "browser"
    },
    "xtheme_editor_vendor": {
      "source": "static_src/editor/vendor.js",
      "context": "browser"
    },
    "xtheme_editor_injection": {
      "source": "static_src/injection/editor-injection.js",
      "context": "browser"
    }
  }
}
